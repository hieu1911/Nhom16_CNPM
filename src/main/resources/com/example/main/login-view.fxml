<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<HBox xmlns:fx="http://javafx.com/fxml" spacing="180"
      fx:controller="com.example.controller.LoginController">
    <ImageView fitWidth="450" fitHeight="600">
        <Image url="@../../../image/login.jpg"/>
    </ImageView>
    <VBox alignment="CENTER" spacing="36">
        <Text text="LOGIN"
              style=" -fx-font-smoothing-type: lcd;
                      -fx-fill: #a59ee6;
                      -fx-font-weight: bold;
                      -fx-font-size: 56pt;"/>
        <VBox spacing="16">
            <TextField promptText="Username" prefWidth="400" prefHeight="40" focusTraversable="false"
                       style="-fx-background-radius: 60; -fx-font-size: 12pt; -fx-padding: 0 16 0 16"/>
            <PasswordField promptText="Password" prefWidth="400" prefHeight="40" focusTraversable="false"
                       style="-fx-background-radius: 60; -fx-font-size: 12pt; -fx-padding: 0 16 0 16"/>
        </VBox>
        <Button text="Sign in"
                textFill="white"
                prefHeight="40"
                prefWidth="200"
                style= "-fx-background-color: linear-gradient(to right, #d674bc, #866cec);
                        -fx-background-radius: 80;
                        -fx-cursor: hand;
                        -fx-background-insets: 0,1,2,3,0;
                        -fx-font-weight: bold;
                        -fx-font-size: 24px;
                        -fx-padding: 6 6 6 6;"/>
    </VBox>
</HBox>
